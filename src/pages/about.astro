---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
---

<BaseLayout title="About oops19">
  <MainCard title="" description="" textOverlay="" infoIcon="lucide:user">
    <div class="space-y-10 mb-8">
      <!-- Profile Section -->
      <section class="flex flex-col md:flex-row gap-8 items-center md:items-start">
        <div class="avatar">
          <div
            class="w-32 h-32 md:w-40 md:h-40 rounded-xl ring ring-primary ring-offset-base-100 ring-offset-2 overflow-hidden"
          >
            <img src="https://github.com/oops191.png" alt="SunMaple" width="160" height="160" loading="eager" />
          </div>
        </div>

        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl md:text-4xl font-bold mb-2">oops19</h1>
          <p class="text-xl text-base-content/80 mb-4"></p>

          <div class="flex flex-wrap gap-3 justify-center md:justify-start mb-6">
            <a
              href="https://github.com/oops191"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:github" class="w-4 h-4" />
              <span>GitHub</span>
            </a>
            <a
              href="https://twitter.com/oops1958"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:twitter" class="w-4 h-4" />
              <span>Twitter</span>
            </a>
            <a href="" class="btn btn-sm btn-outline gap-2">
              <Icon name="lucide:mail" class="w-4 h-4" />
              <span>Email</span>
            </a>
          </div>

          <p class="text-base-content/80">Created by oops19 on 2025-11-23</p>
        </div>
      </section>

      <!-- GitHub Stats -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:github" class="w-6 h-6 text-primary" />
          <span>GitHub Statistics</span>
        </h2>

        <GitHubStats username="oops191" showLanguages={false} showCommitGraph={true} />
      </section>
    </div>
  </MainCard>
</BaseLayout>
